{
    "family": "hello-world-newest",
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "hello-world-test-four",
            "cpu": 10,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ],
            "links": [
                "mongo"
            ],
            "volumes": [
                {
                    "name": "app",
                    "host": {
                        "sourcePath": "./:/app"
                    }
                }
            ]
        },
        {
            "image": "mongo",
            "name": "mongo",
            "cpu": "10",
            "memory": "256",
            "essential": "true",
            "portMappings": [
                {
                    "containerPort": 27017,
                    "hostPort": 27017
                }
            ],
            "volumesFrom": [
                {
                    "sourceContainer": "mongodata"
                }
            ]
        },
        {
            "image": "mongo",
            "name": "mongodata",
            "cpu": "10",
            "memory": "256",
            "essential": "true",
            "volumes": [
                {
                    "name": "data",
                    "host": {
                        "sourcePath": "/data/db"
                    }
                }
            ],
            "entryPoint": [
                "/bin/bash"
            ]
        }
    ]
}
