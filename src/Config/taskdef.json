{
    "family": "hello-world-newest",
    "volumes": [
        {
            "name": "app",
            "host": {
                "sourcePath": "./:/app"
            }
        },
        {
            "name": "data",
            "host": {
                "sourcePath": "/data/db"
            }
        }
    ],
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "hello-world",
            "cpu": 10,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ],
            "links": [
                "mongo"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "app",
                    "containerPath": "./:/app"
                }
            ]
        },
        {
            "image": "mongo",
            "name": "mongo",
            "cpu": "10",
            "memory": "256",
            "essential": "true",
            "portMappings": [
                {
                    "containerPort": 27017,
                    "hostPort": 27017
                }
            ],
            "volumesFrom": [
                {
                    "sourceContainer": "mongodata"
                }
            ]
        },
        {
            "image": "mongo",
            "name": "mongodata",
            "cpu": "10",
            "memory": "256",
            "essential": "true",
            "entryPoint": [
                "/bin/bash"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "data",
                    "containerPath": "/data/db"
                }
            ]            
        }
    ]
}
