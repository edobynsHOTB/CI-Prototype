{
    "family": "hello-world-newest",
    "volumes": [
        {
            "name": "webdata",
            "host": {
                "sourcePath": "/ecs/webdata"
            }
        }
    ],
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "hello-world",
            "cpu": 10,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ],
            "links": [
                "mongo"
            ]
        },
        {
            "image": "mongo",
            "name": "mongo",
            "cpu": 10,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 27017,
                    "hostPort": 27017
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "webdata",
                    "containerPath": "/usr/share/nginx/html"
                }
            ]
        }
    ]
}
