{
    "family": "hello-world-newest",
    // "volumes": [
    //     {
    //         "name": "data",
    //         "host": {
    //             "sourcePath": "/data/db"
    //         }
    //     }
    // ],
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "hello-world",
            "cpu": 4,
            "memory": 128,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ],
            "links": [
                "mongo:db"
            ]
        },
        {
            "image": "mongo",
            "name": "mongo",
            "cpu": 4,
            "memory": 128,
            "essential": true
            // "portMappings": [
            //     {
            //         "containerPort": 27017,
            //         "hostPort": 27017
            //     }
            // ],
            // "volumesFrom": [
            //     {
            //         "sourceContainer": "mongodata"
            //     }
            // ],
            // "entryPoint": [
            //     "/bin/bash"
            // ]
        },
        {
            "image": "mongo",
            "name": "mongodata",
            "cpu": 4,
            "memory": 128,
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "data",
                    "containerPath": "/data/db"
                }
            ],
            "entryPoint": [
                "/bin/bash"
            ]
        }
    ]
}
